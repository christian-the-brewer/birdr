{% layout 'layout.liquid' %}
{% block content %}
    <div class="container-md">
        <article>

            <h2>{{place.name}}</h2>
            <p>
                {{place.description}}
            </p>
            <div class="btn-group">

                <a href="/places/{{place._id}}/edit" class="btn btn-primary">Edit {{place.name}}</a>
                <form action="/places/{{place._id}}?_method=DELETE" method="POST">
                    <input type="submit" value="Delete" class="btn btn-danger">
                </form>
            </div>
        </article>
    </div>
{% endblock %}